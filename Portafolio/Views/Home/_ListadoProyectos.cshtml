@model IEnumerable<Proyecto>

	<!--
		Y aqui final y basicamente se muestran los atributos de cada elemento del IEnumerable

	-->

	@if (Model is not null)
	{

		<div class="container">
			<div class="row row-cols-1 row-cols-md-3 g-4">
				@foreach (var proyecto in Model)
				{
					<div class="col">
						<div class="card h-100">
							<img src="@proyecto.imagenURL" class="card-img-top" alt="imagen proyecto" />
							<div class="card-body">
								<h5 class="card-title">@proyecto.titulo</h5>
								<p class="card-text">@proyecto.descripcion</p>
							</div>
							<div class="card-footer">
								<a class="btn btn-primary" href="@proyecto.link" target="_blank" rel="noopener noreferrer">Visitar</a>
							</div>
						</div>
					</div>
				}
			</div>
		</div>
	}